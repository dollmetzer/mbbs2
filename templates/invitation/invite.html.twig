{% set nav_top = 'bbs_contact' %}
{% extends 'base.html.twig' %}

{% block title %}{% trans %}base.title.invite{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}base.title.invite{% endtrans %}</h1>

    <p>{% trans %}base.message.invite{% endtrans %}</p>

    {% if invitation %}
        <p>{% trans %}base.message.invitationcode{% endtrans%} : {{ invitation.code|slice(0,4) }} {{ invitation.code|slice(4,4) }} {{ invitation.code|slice(8,4) }} {{ invitation.code|slice(12,4) }}</p>
        <p>{% trans %}base.message.invitationuntil{% endtrans %} {{ invitation.expiration|format_datetime('medium', 'short', locale='de') }}</p>
        {% set url = url('account_accept_invitation', {code:invitation.code}) %}
        <img src="{{ qr_code_data_uri(url, { writer: 'svg', size: 300 }) }}" />
    {% else %}
        <a href="{{ path('account_create_invitation') }}" class="btn btn-primary">{% trans %}base.btn.invite{% endtrans %}</a>
    {% endif %}

{% endblock %}

