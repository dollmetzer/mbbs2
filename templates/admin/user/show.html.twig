{% set nav_top = 'admin_user' %}
{% extends 'base.html.twig' %}

{% block title %}{% trans %}admin.title.users{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}admin.title.users{% endtrans %}</h1>

    {% if user %}
    <table class="table table-striped">
        <tr>
            <td><strong>{% trans %}admin.form.name{% endtrans %}</strong></td>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <td><strong>{% trans %}admin.form.active{% endtrans %}</strong></td>
            <td>{% if user.isActive == true %}{% trans %}base.btn.yes{% endtrans %}{% else %}{% trans %}base.btn.no{% endtrans %}{% endif %}</td>
        </tr>
        <tr>
            <td><strong>{% trans %}admin.form.roles{% endtrans %}</strong></td>
            <td>{{ user.roles|join(', ') }}</td>
        </tr>
        <tr>
            <td><strong>{% trans %}admin.form.locale{% endtrans %}</strong></td>
            <td>{{ user.locale }}</td>
        </tr>
        <tr>
            <td><strong>{% trans %}admin.form.registrar{% endtrans %}</strong></td>
            <td>{% if user.registrar %}{{ user.registrar.username }}{% else %}---{% endif %}</td>
        </tr>
        <tr>
            <td><strong>{% trans %}base.form.created{% endtrans %}</strong></td>
            <td>{{ user.createdOn|format_datetime('medium', 'short', locale='de') }}</td>
        </tr>
        <tr>
            <td><strong>{% trans %}base.form.updated{% endtrans %}</strong></td>
            <td>{{ user.updatedOn|format_datetime('medium', 'short', locale='de') }}</td>
        </tr>
        <tr>
            <td colspan="2"><a href="{{ path("admin_user_edit", {id : user.id}) }}" class="btn btn-outline-dark">{% trans %}base.btn.edit{% endtrans %}</a></td>
        </tr>
    </table>
    {% else %}
        <div class="alert alert-danger" role="alert">
            {% trans %}admin.message.unknownuser{% endtrans %}
        </div>
    {% endif %}
{% endblock %}
