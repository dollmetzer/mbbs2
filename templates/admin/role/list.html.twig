{% set nav_top = 'admin_role' %}
{% extends 'base.html.twig' %}

{% block title %}{% trans %}admin.title.roles{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}admin.title.roles{% endtrans %}</h1>

    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th scope="col">&nbsp;</th>
            <th scope="col">{% trans %}admin.form.name{% endtrans %}</th>
            <th scope="col">{% trans %}admin.form.users{% endtrans %}</th>
            <th scope="col">{% trans %}base.form.created{% endtrans %}</th>
            <th scope="col">{% trans %}base.form.updated{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>
                    <a href="{{ path('admin_role_show', {id : role.id}) }}" class="btn btn-outline-dark" title="{% trans %}base.btn.view{% endtrans %}"><i class="fa-fw far fa-eye"></i></a>
                    <a href="{{ path('admin_role_edit', {id : role.id}) }}" class="btn btn-outline-dark" title="{% trans %}base.btn.edit{% endtrans %}"><i class="fa-fw far fa-edit"></i></a>
                    <a data-href="{{ path('admin_role_delete', {id : role.id}) }}" class="btn btn-outline-dark" title="{% trans %}base.btn.delete{% endtrans %}" data-toggle="modal" data-target="#confirm-delete"><i class="fa-fw far fa-trash-alt"></i></a>
                </td>
                <td>{{ role.name }}</td>
                <td>{{ role.users|length }}</td>
                <td>{{ role.createdOn|format_datetime('medium', 'short', locale='de') }}</td>
                <td>{{ role.updatedOn|format_datetime('medium', 'short', locale='de') }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <a href="{{ path("admin_role_create") }}" class="btn btn-outline-dark" title="{% trans %}base.btn.create{% endtrans %}">{% trans %}admin.btn.newrole{% endtrans %}</a>
                </td>
            </tr>
        </tfoot>
    </table>

    {% include '_elements/modal_delete_confirmation.html.twig' %}

{% endblock %}

