{% set nav_top = 'admin' %}
{% set nav_main = 'admin_role' %}
{% extends 'base.html.twig' %}

{% block title %}{% trans %}admin.title.roles{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}admin.title.roles{% endtrans %}</h1>

    {% if role %}
    <table class="table table-striped">
        <tr>
            <td><strong>{% trans %}admin.form.name{% endtrans %}</strong></td>
            <td>{{ role.name }}</td>
        </tr>
        <tr>
            <td><strong>{% trans %}admin.form.protected{% endtrans %}</strong></td>
            <td>{% if role.isProtected == true %}{% trans %}base.btn.yes{% endtrans %}{% else %}{% trans %}base.btn.no{% endtrans %}{% endif %}</td>
        </tr>
        <tr>
            <td><strong>{% trans %}base.form.created{% endtrans %}</strong></td>
            <td>{{ role.createdOn|format_datetime('medium', 'short', locale='de') }}</td>
        </tr>
        <tr>
            <td><strong>{% trans %}base.form.updated{% endtrans %}</strong></td>
            <td>{{ role.updatedOn|format_datetime('medium', 'short', locale='de') }}</td>
        </tr>
        <tr>
            <td colspan="2"><a href="{{ path("admin_role_edit", {id : role.id}) }}" class="btn btn-outline-dark">{% trans %}base.btn.edit{% endtrans %}</a></td>
        </tr>
    </table>
    {% else %}
        <div class="alert alert-danger" role="alert">
            {% trans %}admin.message.unknownrole{% endtrans %}
        </div>
    {% endif %}
{% endblock %}
