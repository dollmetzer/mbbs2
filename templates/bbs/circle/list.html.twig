{% set nav_top = 'bbs_circles' %}
{% extends 'base.html.twig' %}

{% block title %}{% trans %}bbs.title.circles{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}bbs.title.circles{% endtrans %}</h1>

    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th scope="col">&nbsp;</th>
            <th scope="col">{% trans %}admin.form.name{% endtrans %}</th>
            <th scope="col">{% trans %}base.form.created{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for circle in circles %}
            <tr>
                <td></td>
                <td>{{ circle.name }}</td>
                <td>{{ circle.createdOn|format_datetime('medium', 'none', locale='de') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}

