{% set nav_top = 'bbs_contact' %}
{% extends 'base.html.twig' %}

{% block title %}{% trans %}bbs.title.circles{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}bbs.title.circles{% endtrans %}</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <td colspan="2"><strong>{{ circle.name }}</strong></td>
        </tr>
        </thead>
        <tbody>
        {% if circle.contacts is not empty %}
            {% for contact in circle.contacts %}
                <tr>
                    <td class="col-3">
                        <a href="#" class="btn btn-outline-dark"><i class="fa-fw fas fa-user"></i></a>
                        <a href="#" class="btn btn-outline-dark"><i class="fa-fw far fa-times-circle"></i></a>
                        <a data-href="{{ path('circle_delete', {id : circle.id}) }}" class="btn btn-outline-dark" title="{% trans %}base.btn.delete{% endtrans %}" data-toggle="modal" data-target="#confirm-delete"><i class="fa-fw far fa-trash-alt"></i></a>
                    </td>
                    <td class="col">{{ contact.contact.handle }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="2">{% trans %}bbs.message.emptycircle{% endtrans %}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

{% endblock %}

